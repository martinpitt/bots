summary: Run bot tasks on Testing Farm
prepare:
    how: install
    package:
      - podman
      - python3-aiohttp+speedups
      - python3-aioresponses

discover:
    how: fmf
    test: issue-scan

execute:
    how: tmt

/issue-scan:
    summary: Run bot task command from issue-scan
    # slightly less than the timeout in .github/workflows/issue-scan.yml
    duration: 55m
    tag:
      - issue-scan
      - testing-farm
    test: ./issue-scan.sh
